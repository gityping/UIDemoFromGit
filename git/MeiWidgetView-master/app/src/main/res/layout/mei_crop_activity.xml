<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/ic_arrow_back_white_24dp"
        app:title="小红书图片裁剪"
        app:titleTextColor="#FFF" />


    <com.meis.widget.xiaohongshu.CoordinatorLinearLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.meis.widget.xiaohongshu.MCropImageView
            android:id="@+id/crop_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_gril" />

        <com.meis.widget.xiaohongshu.CoordinatorRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.meis.widget.xiaohongshu.CoordinatorRecyclerView>


    </com.meis.widget.xiaohongshu.CoordinatorLinearLayout>


</LinearLayout>